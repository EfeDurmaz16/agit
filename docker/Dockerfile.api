FROM python:3.12-slim-bookworm

WORKDIR /app

COPY pyproject.toml README.md ./
COPY python/ python/

RUN pip install --no-cache-dir -e ".[dev]" && \
    pip install --no-cache-dir fastapi uvicorn slowapi pydantic

EXPOSE 8000

CMD ["uvicorn", "agit.server.app:app", "--host", "0.0.0.0", "--port", "8000"]
