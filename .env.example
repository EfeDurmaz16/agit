# ============================================================================
# agit Environment Variables
# ============================================================================
# Copy this file to .env and customize for your environment.
# DO NOT commit .env to version control.

# --- API Authentication ---
# JSON map of API keys to metadata. Keys should include "role" field.
# Example: {"sk-prod-abc": {"tenant": "acme", "agent_id": "agent-1", "role": "admin"}}
# AGIT_API_KEYS=

# --- Server Configuration ---
# Comma-separated list of allowed CORS origins
AGIT_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Log level: DEBUG, INFO, WARNING, ERROR
AGIT_LOG_LEVEL=INFO

# --- Rate Limiting ---
# Redis URL for distributed rate limiting (optional)
# AGIT_REDIS_URL=redis://localhost:6379

# --- Storage ---
# Allow pure-Python/TS fallback (development/testing only, NOT for production)
# AGIT_ALLOW_STUBS=1

# --- PostgreSQL (if using postgres backend) ---
# POSTGRES_PASSWORD=change_me_in_production
# POSTGRES_USER=agit
# POSTGRES_DB=agit

# --- AWS S3 (if using S3 backend) ---
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AGIT_S3_BUCKET=
# AGIT_SQS_QUEUE_URL=

# --- Web Dashboard ---
# NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
# NEXT_PUBLIC_AGIT_API_KEY=
